# ============================================================================
# Crawl4AI Production Environment
# ============================================================================

# API Keys (set these via secrets management)
DEEPSEEK_API_KEY=your_deepseek_key_here
OPENROUTER_API_KEY=your_openrouter_key_here
CRAWL_API_KEY=your_secure_api_key_here

# Security
REQUIRE_API_KEY=true

# Logging
LOG_LEVEL=INFO

# Crawler Configuration
# For production, adjust based on your deployment resources
MAX_PAGES=100              # Max pages per crawl
MAX_DEPTH=3                # Max crawl depth
REQUEST_TIMEOUT_SECONDS=60 # Request timeout
MEMORY_THRESHOLD_MB=500    # Memory threshold before pausing
MAX_CONCURRENT_REQUESTS=3  # Concurrent requests

# CORS
CORS_ORIGINS=*
